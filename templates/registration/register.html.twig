{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        {{ form_start(registrationForm, {'attr': {'class': "col-6 center m-auto"}}) }}

        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        
            <div class="form-group">
                {{ form_label(registrationForm.email, null,) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.pseudo, null,) }}
                {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.pseudo) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, null,) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
                    
            </div>
            {{ form_row(registrationForm.agreeTerms) }}

            
            <div class="text-end mt-3">
                <button type="submit" class="btn btn-warning mt-4">Register</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
